        <% if (user.address) { %>
            <p><strong>Address:</strong> <%= user.address %></p>
        <% } %>

        <hr>

        <a href="/profile" class="btn btn-secondary w-100 py-2 rounded-pill">
            Back to Dashboard
        </a>
    </div>
